<%@ page language="java" contentType="text/xml; charset=UTF-8"
    pageEncoding="UTF-8"%>
<!-- 
	language : 현재 JSP에서 사용할 프로그래밍 언어 설정
	contentType : JSP페이지의 콘텐츠 유형을 설정
	pageEncoding : 현재 JSP페이지의 문자 인코딩 유형 설정
 -->    
<!DOCTYPE html>
<html>
<head>
<title>xml문서 작성</title>
</head>
<body>
	<h2>contentType 확인</h2>
	<p>text / xml 설정</p>
</body>
</html>